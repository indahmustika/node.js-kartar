	<link href="/public_admin/css/sb-admin-2.min.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
</head>

<body id="page-top">
	<div id="wrapper">
		<ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
			<a class="sidebar-brand d-flex align-items-center justify-content-center"><div class="sidebar-brand-icon"><img src="/public_website/images/version/logo.png" alt=""></div></a>
			<hr class="sidebar-divider my-0">
			<li class="nav-item"><a class="nav-link" href="/admin/beranda">Beranda</a></li>
			<li class="nav-item"><a class="nav-link" href="/admin/organisasi">Profil Organisasi</a></li>
			<li class="nav-item"><a class="nav-link" href="/admin/struktural">Struktur Organisasi</a></li>
			<li class="nav-item"><a class="nav-link" href="/admin/berita">Berita Terkini</a></li>
			<li class="nav-item"><a class="nav-link" href="/admin/agenda">Agenda Kegiatan</a></li>
			<li class="nav-item"><a class="nav-link" href="/admin/pengumuman">Pengumuman</a></li>
			<li class="nav-item active"><a class="nav-link bg-light text-dark" href="/admin/galeri">Galeri</a></li>
			<hr class="sidebar-divider">
		</ul>

		<div id="content-wrapper" class="d-flex flex-column">
			<div id="content">

				<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
					<h1 class="h6 mb-0 text-primary-800"><b>ADMINISTRATOR WEBSITE</b></h1>
					<ul class="navbar-nav ml-auto">
						<li class="nav-item dropdown no-arrow">
							<a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="mr-2 d-none d-lg-inline text-gray-600"><%= username%></span></a>
							<div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
								<a class="dropdown-item" href="/admin/logout"><i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>Logout</a>
							</div>
						</li>
					</ul>
				</nav>

				<div class="container-fluid">
					<div class="d-sm-flex align-items-center justify-content-between mb-4"><h1 class="h3 mb-0 text-gray-800">Galeri Foto</h1></div>
					<div class="row">
						<div class="col-xl-12 col-lg-7">
							<div class="card shadow mb-4">
								<div class="card-header py-3">
									<h6 class="m-0 font-weight-bold text-primary">Galeri Foto</h6>
								</div>
								<div class="card-body">
									<button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">
										<i class="fa fa-plus"></i> Tambah Foto
									</button>
									<p></p>
									<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
										<div class="modal-dialog" role="document">
											<div class="modal-content">
												<div class="card shadow mb-4">
													<div class="card-header py-3">
														<h5 class="m-0 text-primary">Tambah Foto</h5>
													</div>
													<div class="card-body">
														<form action="/admin/insert_galeri/" method="POST">
															<div class="table-responsive">
																<table class="table table-sm table-borderless" width="100%" cellspacing="0">
																	<tr>
																		<div class="form-grup">
																			<td width="20%"><label class="control-label">Judul</label></td>
																			<td width="80%"><input class="form-control" type="text" name="judul_foto" placeholder="Judul Foto"></td>
																		</div>
																	</tr>
																	<tr>
																		<div class="form-grup">
																			<td width="20%"><label class="control-label">Gambar</label></td>
																			<td width="80%"><input class="form-control" type="file" name="file_foto" placeholder="Gambar"></td>
																		</div>
																	</tr>
																	<tr>
																		<div class="form-grup">
																			<td width="20%"></td>
																			<td width="80%"><input type="submit" name="simpan" value="Simpan" class="btn btn-success"></td>
																		</div>
																	</tr>
																</table>
															</div>
														</form>
													</div>
												</div>
											</div>
										</div>
									</div>
									<div class="card-columns">
										<% galeri.forEach(function(glr){ %>
										<div class="card">
											<img class="card-img-top" src="/public_website/upload/<%= glr.file_foto%>" alt="Card image cap" style="width:330px; height:200px; object-fit: cover">
											<div class="card-body">
												<p class="card-text"><%= glr.judul_foto%></p>
											</div>
											<div class="card-footer">
												<small class="text-muted">
													
													<%= glr.date_created%> 

													<button type="button"  class="btn btn-sm btn-info text-light" style="margin: 0 0 0 30%;" data-toggle="modal" data-target="#exampleModal1-<%= glr.id_foto%>">
														<i class="fa fa-edit"></i>
													</button>
													
													<div class="modal fade" id="exampleModal1-<%= glr.id_foto%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
														<div class="modal-dialog" role="document">
															<div class="modal-content">
																<div class="card shadow mb-4">
																	<div class="card-header py-3">
																		<h5 class="m-0 text-primary">Perbarui Foto</h5>
																	</div>
																	<div class="card-body">
																		<form action="/admin/update_galeri/" method="POST">
																			<div class="table-responsive">
																				<table class="table table-sm table-borderless" width="100%" cellspacing="0">
																					<input type="hidden" name="id_foto" value="<%= glr.id_foto%>">
																					<tr>
																						<div class="form-grup">
																							<td width="20%"><label class="control-label">Judul</label></td>
																							<td width="80%"><input class="form-control" type="text" name="judul_foto" placeholder="Judul Foto" value="<%= glr.judul_foto%>"></td>
																						</div>
																					</tr>
																					<tr>
																						<div class="form-grup">
																							<td width="20%"><label class="control-label">Gambar</label></td>
																							<td width="80%"><input class="form-control" type="file" name="file_foto" placeholder="Gambar" value="<%= glr.file_foto%>"></td>
																						</div>
																					</tr>
																					<tr>
																						<div class="form-grup">
																							<td width="20%"></td>
																							<td width="80%"><input type="submit" name="simpan" value="Simpan" class="btn btn-success"></td>
																						</div>
																					</tr>
																				</table>
																			</div>
																		</form>
																	</div>
																</div>
															</div>
														</div>
													</div>
													<a href="/admin/delete_galeri/<%= glr.id_foto%>" class="btn btn-sm btn-danger text-light"><i class="fa fa-trash"></i></a>
												</small>
											</div>
										</div>
										<% }) %>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

			</div>

			<footer class="sticky-footer bg-white">
				<div class="container my-auto">
					<div class="copyright text-center my-auto">
						<span>Copyright &copy; Karang Taruna Akar Bangkit 2020</span>
					</div>
				</div>
			</footer>

		</div>

	</div>

	<a class="scroll-to-top rounded" href="#page-top">
		<i class="fas fa-angle-up"></i>
	</a>

	<script src="/public_admin/vendor/jquery/jquery.min.js"></script>
	<script src="/public_admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="/public_admin/vendor/jquery-easing/jquery.easing.min.js"></script>
	<script src="/public_admin/js/sb-admin-2.min.js"></script>
	<script src="/public_admin/vendor/chart.js/Chart.min.js"></script>
	<script src="/public_admin/js/demo/chart-area-demo.js"></script>
	<script src="/public_admin/js/demo/chart-pie-demo.js"></script>
</body>
</html>