	<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
</head>

<body id="page-top">
	<div id="wrapper">
		<ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
			<a class="sidebar-brand d-flex align-items-center justify-content-center"><div class="sidebar-brand-icon"><img src="/public_website/images/version/logo.png" alt=""></div></a>
			<hr class="sidebar-divider my-0">
			<li class="nav-item"><a class="nav-link" href="/admin/beranda">Beranda</a></li>
			<li class="nav-item"><a class="nav-link" href="/admin/organisasi">Profil Organisasi</a></li>
			<li class="nav-item active"><a class="nav-link bg-light text-dark" href="/admin/struktural">Struktur Organisasi</a></li>
			<li class="nav-item"><a class="nav-link" href="/admin/berita">Berita Terkini</a></li>
			<li class="nav-item"><a class="nav-link" href="/admin/agenda">Agenda Kegiatan</a></li>
			<li class="nav-item"><a class="nav-link" href="/admin/pengumuman">Pengumuman</a></li>
			<li class="nav-item"><a class="nav-link" href="/admin/galeri">Galeri</a></li>
			<hr class="sidebar-divider">
		</ul>

		<div id="content-wrapper" class="d-flex flex-column">
			<div id="content">

				<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
					<h1 class="h6 mb-0 text-primary-800"><b>ADMINISTRATOR WEBSITE</b></h1>
					<ul class="navbar-nav ml-auto">
						<li class="nav-item dropdown no-arrow">
							<a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="mr-2 d-none d-lg-inline text-gray-600"><%= username%></span></a>
							<div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
								<a class="dropdown-item" href="/admin/logout"><i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>Logout</a>
							</div>
						</li>
					</ul>
				</nav>

				<div class="container-fluid">
					<div class="d-sm-flex align-items-center justify-content-between mb-4"><h1 class="h3 mb-0 text-gray-800">Struktur Organisasi</h1></div>
					<div class="row">
						<div class="col-xl-12 col-lg-7">
							<div class="card shadow mb-4">
								<div class="card-header py-3">
									<h5 class="m-0 text-primary">Struktur Organisasi</h5>
								</div>
								<div class="card-body">
									<div class="table-responsive">
										<table class="table" id="dataTable" width="100%" cellspacing="0">
											<thead>
												<tr>
													<th width="10%">No</th>
													<th width="30%">Jabatan</th>
													<th width="50%">Nama</th>
													<th width="10%">Action</th>
												</tr>
											</thead>
											<tbody>
												<% struktural.forEach(function(str){ %>
												<tr>
													<td><center><%= str.id_jabatan%></center></td>
													<td><%= str.nama_jabatan%></td>
													<td><%= str.nama_penjabat%></td>
													<td>

														<button type="button"  class="btn btn-sm btn-info text-light" data-toggle="modal" data-target="#exampleModal1-<%= str.id_jabatan%>">
															<i class="fa fa-edit"></i> Edit
														</button>

														<div class="modal fade" id="exampleModal1-<%= str.id_jabatan%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
															<div class="modal-dialog" role="document">
																<div class="modal-content">
																	<div class="card shadow mb-4">
																		<div class="card-header py-3">
																			<h5 class="m-0 text-primary">Perbarui Struktur Organisasi</h5>
																		</div>
																		<div class="card-body">
																			<form action="/admin/update_struktural/" method="POST">
																				<div class="table-responsive">
																					<table class="table table-sm table-borderless" width="100%" cellspacing="0">
																						<input type="hidden" name="id_jabatan" value="<%= str.id_jabatan%>">
																						<tr>
																							<div class="form-grup">
																								<td width="20%"><label class="control-label">Jabatan</label></td>
																								<td width="80%"><input class="form-control" type="text" name="nama_jabatan" placeholder="Jabatan" value="<%= str.nama_jabatan%>" readonly="readonly"></td>
																							</div>
																						</tr>
																						<tr>
																							<div class="form-grup">
																								<td width="20%"><label class="control-label">Nama</label></td>
																								<td width="80%"><input class="form-control" type="text" name="nama_penjabat" placeholder="Nama" value="<%= str.nama_penjabat%>"></td>
																							</div>
																						</tr>
																						<tr>
																							<div class="form-grup">
																								<td width="20%"><label class="control-label">Foto</label></td>
																								<td width="80%"><input class="form-control" type="file" name="foto_penjabat" placeholder="Foto" value="<%= str.foto_penjabat%>"></td>
																							</div>
																						</tr>
																						<tr>
																							<div class="form-grup">
																								<td width="20%"><label class="control-label">Periode</label></td>
																								<td width="80%"><input class="form-control" type="text" name="periode_jabatan" placeholder="Periode" value="<%= str.periode_jabatan%>"></td>
																							</div>
																						</tr>
																						<tr>
																							<div class="form-grup">
																								<td width="20%"></td>
																								<td width="80%"><input type="submit" name="simpan" value="Simpan" class="btn btn-success"></td>
																							</div>
																						</tr>
																					</table>
																				</div>
																			</form>
																		</div>
																	</div>
																</div>
															</div>
														</div>
													</td>
												</tr>
												<% }) %>
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

			</div>

			<footer class="sticky-footer bg-white">
				<div class="container my-auto">
					<div class="copyright text-center my-auto">
						<span>Copyright &copy; Karang Taruna Akar Bangkit 2020</span>
					</div>
				</div>
			</footer>

		</div>
	</div>

	<a class="scroll-to-top rounded" href="#page-top">
		<i class="fas fa-angle-up"></i>
	</a>

	<script src="/public_admin/vendor/jquery/jquery.min.js"></script>
	<script src="/public_admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="/public_admin/vendor/jquery-easing/jquery.easing.min.js"></script>
	<script src="/public_admin/js/sb-admin-2.min.js"></script>
	<script src="/public_admin/vendor/datatables/jquery.dataTables.min.js"></script>
	<script src="/public_admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
	<script src="/public_admin/js/demo/datatables-demo.js"></script>
</body>
</html>